{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Avoids type-checking node_modules
    "strict": true, // Ensures strict type checking
    "noEmit": true, // Prevents emitting output files
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "module": "esnext",
    "types": ["node"], // Includes Node.js types
    "moduleResolution": "node", // Resolves modules in Node.js style
    "resolveJsonModule": true, // Allows importing JSON files
    "isolatedModules": true, // Required for Next.js
    "jsx": "react-jsx", // For React 17+ JSX transforms
    "incremental": true, // Speeds up builds
    "baseUrl": ".", // Base URL for module resolution
    "paths": {
      "@/*": ["./*"] // Aliases for cleaner imports
    }
  },
  "include": [
    "next-env.d.ts", // Next.js type definitions
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TypeScript React files
    ".next/types/**/*.ts" // Next.js autogenerated types
  ],
  "exclude": [
    "node_modules" // Exclude unnecessary files
  ]
}
